<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>False</UseWindowsForms>
    <StartupObject>Pat.App</StartupObject>
    <ApplicationIcon>msoftware_standalone.ico</ApplicationIcon>
    <RootNamespace>$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="msoftware_standalone.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="msoftware_standalone.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="msoftware_standalone.png" />
  </ItemGroup>

</Project>
